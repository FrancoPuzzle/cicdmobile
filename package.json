{
  "name": "@addi/mobile",
  "version": "0.0.0",
  "scripts": {
    "mobile:android": "react-native run-android",
    "mobile:ios": "react-native run-ios",
    "mobile:start": "react-native start",
    "mobile:test": "jest",
    "mobile:ts": "tsc --watch --noEmit --skipLibCheck",
    "start:cache-clean": "react-native start --reset-cache",
    "clean-modules": "rm -rf node_modules/ && yarn cache clean && yarn install",
    "mobile:eslint-fix-all": "eslint --fix app/**/*.{js,ts,tsx}",
    "mobile:prettier-fix-all": "prettier --write app/**/*.{js,ts,tsx,json}",
    "mobile:eslint-check-all": "eslint app/**/*.{js,ts,tsx}",
    "mobile:prettier-check-all": "prettier --check app/**/*.{js,ts,tsx,json}",
    "e2e:build:ios:debug": "detox build --configuration ios.sim.debug",
    "e2e:build:ios:release": "detox build --configuration ios.sim.release",
    "e2e:build:android:debug": "detox build --configuration android.emu.debug",
    "e2e:build:android:release": "detox build --configuration android.emu.release",
    "e2e:test:ios:debug": "detox test --configuration ios.sim.debug",
    "e2e:test:ios:release": "detox test --configuration ios.sim.release",
    "e2e:test:android:debug": "detox test --configuration android.emu.debug",
    "e2e:test:android:release": "detox test --configuration android.emu.release",
    "storybook": "adb reverse tcp:7007 tcp:7007 && start-storybook -p 7007",
    "build-storybook": "build-storybook",
    "prestorybook": "rnstl",
    "start:storybook": "npm-run-all -p start:cache-clean storybook"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.13.2",
    "@react-native-community/masked-view": "^0.1.10",
    "@react-navigation/bottom-tabs": "^5.11.2",
    "@react-navigation/native": "^5.8.10",
    "@react-navigation/stack": "^5.12.8",
    "@storybook/react-native-server": "^5.3.23",
    "formik": "^2.2.6",
    "graphql": "^15.4.0",
    "i18n-js": "^3.8.0",
    "react": "^16.8.6",
    "react-native": "0.63.4",
    "react-native-dotenv": "^2.4.3",
    "react-native-gesture-handler": "^1.9.0",
    "react-native-localize": "^2.0.1",
    "react-native-material-textfield": "^0.16.1",
    "react-native-reanimated": "^1.13.2",
    "react-native-safe-area-context": "^3.1.9",
    "react-native-screens": "^2.16.1",
    "react-redux": "^7.2.2",
    "redux": "*",
    "redux-actions": "^2.6.5",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "styled-components": "*",
    "yup": "^0.32.8"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@babel/runtime": "^7.8.4",
    "@react-native-community/eslint-config": "^1.1.0",
    "@storybook/addon-actions": "^5.3",
    "@storybook/addon-knobs": "^5.3",
    "@storybook/addon-links": "^5.3",
    "@storybook/addon-ondevice-actions": "^5.3.23",
    "@storybook/addon-ondevice-knobs": "^5.3.23",
    "@storybook/react-native": "^5.3.23",
    "@testing-library/jest-native": "^3.4.3",
    "@testing-library/react-native": "^7.1.0",
    "@types/i18n-js": "^3.8.0",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.0",
    "@types/react-native": "^0.63.45",
    "@types/react-native-dotenv": "^0.2.0",
    "@types/react-native-material-textfield": "^0.16.3",
    "@types/react-navigation": "^3.4.0",
    "@types/react-redux": "^7.1.15",
    "@types/react-test-renderer": "^17.0.0",
    "@types/redux": "^3.6.0",
    "@types/redux-logger": "^3.0.8",
    "@types/redux-thunk": "^2.1.0",
    "@types/styled-components": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-styled-components": "^1.12.0",
    "detox": "^18.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^25.1.0",
    "jest-transform-stub": "^2.0.0",
    "lint-staged": "^10.5.3",
    "metro-react-native-babel-preset": "^0.59.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "react-dom": "16.13.1",
    "react-native-storybook-loader": "^2.0.2",
    "react-test-renderer": "16.13.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "private": true,
  "workspaces": {
    "nohoist": [
      "react-native",
      "react-native/**",
      "react-native-dev-menu",
      "react-native-svg",
      "react-native-gesture-handler",
      "@react-comunity",
      "@react-comunity/**",
      "@react-async-storage",
      "@react-native-community/async-storage",
      "@react-async-storage/**",
      "@react-navigation",
      "@react-navigation/**",
      "@storybook/**",
      "jetifier",
      "metro-react-native-babel-preset"
    ]
  },
  "detox": {
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/addiMobile.app",
        "build": "xcodebuild -workspace ios/addiMobile.xcworkspace -scheme addiMobile -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "device": {
          "type": "iPhone 11"
        }
      },
      "ios.sim.release": {
        "binaryPath": "ios/build/Build/Products/Release-iphonesimulator/addiMobile.app",
        "build": "xcodebuild -workspace ios/addiMobile.xcworkspace -scheme addiMobile -configuration Release -sdk iphonesimulator -derivedDataPath ios/build EXCLUDED_ARCHS=arm64 DETOX=1",
        "type": "ios.simulator",
        "device": {
          "type": "iPhone 11"
        }
      },
      "android.emu.debug": {
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
        "build": "cd android && chmod +x gradlew && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd ..",
        "type": "android.emulator",
        "device": {
          "avdName": "emu"
        }
      },
      "android.emu.release": {
        "binaryPath": "android/app/build/outputs/apk/release/app-release.apk",
        "build": "cd android && gradlew app:assembleDebug assembleAndroidTest -DtestBuildType=release && cd ..",
        "type": "android.emulator",
        "device": {
          "avdName": "Pixel_2_API_29"
        }
      }
    },
    "test-runner": "jest"
  },
  "config": {
    "react-native-storybook-loader": {
      "searchDir": [
        "./app"
      ],
      "pattern": "**/*.stories.js"
    }
  }
}
